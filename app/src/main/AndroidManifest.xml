<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.animelist">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_dp"
        android:supportsRtl="true"
        android:theme="@style/Theme.AnimeList">
        <activity android:name=".Link"
            android:label="@string/insta"></activity>
        <activity android:name=".currAnime"
            android:label="@string/cWatching"/>
        <activity android:name=".favAnime"
            android:label="@string/Favorites"/>
        <activity android:name=".wantToWatch"
            android:label="@string/wishlist"/>
        <activity android:name=".AlreadyWatchedAnime"
            android:label="@string/watched"/>
        <activity android:name=".AnimeActivity"
            android:label="@string/animeDls"/>
        <activity android:name=".AllAnimeActivity"
            android:label="@string/AllAnime"/>
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>